                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>


@foreach (var item in Model)
{
    <div class="evaluation">
        <h4>@item.name</h4>
        <span>@item.rating</span>
        <p>@item.city, @item.country</p>
        <span>@item.id</span>
